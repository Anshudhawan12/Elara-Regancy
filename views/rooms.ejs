      const roomImages = document.querySelectorAll('.room-img');
      const modal = document.querySelector('.gallery-modal');
      const modalImg = document.querySelector('.gallery-modal-img');
      const modalClose = document.querySelector('.gallery-modal-close');
      const modalPrev = document.querySelector('.gallery-modal-prev');
      const modalNext = document.querySelector('.gallery-modal-next');

      let currentGalleryIndex = 0;
      let currentGalleryImages = [];

      // Thumbnail click event
      galleryThumbs.forEach(thumb => {
        thumb.addEventListener('click', function () {
          const roomImgContainer = this.closest('div').querySelector('.room-img');
          const newSrc = this.getAttribute('data-src');

          // Update main image
          roomImgContainer.src = newSrc;

          // Update active thumbnail
          const siblings = this.parentElement.querySelectorAll('.gallery-thumb');
          siblings.forEach(sib => sib.classList.remove('active'));
          this.classList.add('active');
        });
      });

      // Open modal on room image click
      roomImages.forEach(img => {
        img.addEventListener('click', function () {
          // Get all thumbnails in this room's gallery
          const thumbs = this.closest('div').querySelectorAll('.gallery-thumb');
          currentGalleryImages = Array.from(thumbs).map(thumb => thumb.getAttribute('data-src'));

          // Find current image index
          const currentSrc = this.src;
          currentGalleryIndex = currentGalleryImages.findIndex(src => src.includes(currentSrc.split('?')[0]));
          if (currentGalleryIndex === -1) currentGalleryIndex = 0;

          // Show modal with current image
          modalImg.src = currentGalleryImages[currentGalleryIndex];
          modal.classList.add('active');
        });
      });

      // Close modal
      modalClose.addEventListener('click', function () {
        modal.classList.remove('active');
      });

      // Click outside to close
      modal.addEventListener('click', function (e) {
        if (e.target === modal) {
          modal.classList.remove('active');
        }
      });

      // Previous image
      modalPrev.addEventListener('click', function () {
        currentGalleryIndex = (currentGalleryIndex - 1 + currentGalleryImages.length) % currentGalleryImages.length;
        modalImg.src = currentGalleryImages[currentGalleryIndex];
      });

      // Next image
      modalNext.addEventListener('click', function () {
        currentGalleryIndex = (currentGalleryIndex + 1) % currentGalleryImages.length;
        modalImg.src = currentGalleryImages[currentGalleryIndex];
      });

      // Keyboard navigation
      document.addEventListener('keydown', function (e) {
        if (!modal.classList.contains('active')) return;

        if (e.key === 'Escape') {
          modal.classList.remove('active');
        } else if (e.key === 'ArrowLeft') {
          modalPrev.click();
        } else if (e.key === 'ArrowRight') {
          modalNext.click();
        }
      });
    });
  </script>
